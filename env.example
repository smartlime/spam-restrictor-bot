# ========== ОБЯЗАТЕЛЬНЫЕ ПАРАМЕТРЫ ==========
BOT_TOKEN=1234567890:ABCdefGHIjklMNOpqrsTUVwxyz

# ID группы для мониторинга (отрицательное число)
# Получить можно через @getidsbot или @myidbot
GROUP_ID=-1001234567890

# ========== ОПЦИОНАЛЬНЫЕ ПАРАМЕТРЫ ==========
# Путь к базе данных SQLite
# По умолчанию: /app/data/spam_restrictor.db
DATABASE_PATH=/app/data/spam_restrictor.db

# Период ограничения в днях (после истечения пользователь удаляется)
# По умолчанию: 30
RESTRICTION_PERIOD_DAYS=30

# Интервал проверки
# По умолчанию: 3600 (1 час)
CHECK_INTERVAL_SECONDS=3600

# Уровень логирования: DEBUG, INFO, WARNING, ERROR, CRITICAL
# По умолчанию: INFO
LOG_LEVEL=INFO

# Часовой пояс
TZ=Europe/Moscow

# ID администратора для получения уведомлений о действиях бота (опционально)
# Получить свой ID можно через @getidsbot или @myidbot
# Если не указан - уведомления не отправляются
ADMIN_USER_ID=

# Отправлять ли уведомление когда при проверке не найдено пользователей для удаления (опционально)
# 0 = не отправлять (по умолчанию), 1 = отправлять
NOTIFY_NO_USERS=0
